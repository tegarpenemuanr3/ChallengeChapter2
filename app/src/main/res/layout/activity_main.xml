<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_gojek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:text="Layout Gojek"
        app:backgroundTint="@color/gojek" />

    <Button
        android:id="@+id/btn_shopee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded"
        android:text="Layout Shopee"
        app:backgroundTint="@color/shopee" />

    <Button
        android:id="@+id/btn_tokopedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded"
        android:text="Layout Tokopedia"
        app:backgroundTint="@color/tokopedia" />

</LinearLayout>